{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "jsx": "react-native",
    "lib": [
      "ESNext",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "./src/**/*",
    "./App.tsx"
  ],
  "files": [
    "./references.d.ts"
  ],
  "exclude": [
    "node_modules",
    "platforms"
  ],
  "extends": "expo/tsconfig.base"
}
